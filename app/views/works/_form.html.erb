<%= form_for @work, :html => { :class => "form-horizontal work" } do |f| %>

  <% if @work.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@work.errors.count, "error") %> prohibited this work from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @work.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :title, :class => 'form-control' %>
    </div>
    <%=f.error_span(:title) %>
  </div>
  <div class="form-group">
    <%= f.label :date_of, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :date_of, :class => 'form-control' %>
    </div>
    <%=f.error_span(:date_of) %>
  </div>
  <div class="form-group">
    <%= f.label :notes, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :notes, :class => 'form-control' %>
    </div>
    <%=f.error_span(:notes) %>
  </div>
  <div class="form-group">
    <%= f.label :artpic, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.file_field :artpic, :class => 'form-control' %>
    </div>
    <%=f.error_span(:artpic) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                works_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
