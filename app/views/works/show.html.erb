<div id="wrapper">
<div class="col-lg-12">
<%- model_class = Work -%>
<div class="page-header">
  <h2><%=t '.title', :default => model_class.model_name.human.titleize %></h2> | <p style="color:green;"><%= link_to('return home', works_path) %></p>
</div>

<dl class="dl-horizontal" id="theyoung">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @work.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:date_of) %>:</strong></dt>
  <dd><%= @work.date_of.strftime("%Y") %></dd>
  <dt><strong><%= model_class.human_attribute_name(:notes) %>:</strong></dt>
  <dd><%= @work.notes %></dd>
  <dd id="fuckkk"><%= image_tag @work.artpic.url(:original) %></dd>
</dl>

<% if admin_signed_in? %>
<%= link_to t('.back', :default => t("helpers.links.back")),
              works_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_work_path(@work), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              work_path(@work),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
<% else %>
<% end %>
</div>
</div>
